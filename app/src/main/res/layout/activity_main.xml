<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.faza.project.fuzzylogicexample.Activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_android" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_demand_min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp">

            <EditText
                android:id="@+id/et_demand_min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Input Demand Min / Day"
                android:inputType="number"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorPrimary" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_demand_max"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/et_demand_max"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Input Demand Max / Day"
                android:inputType="number"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorPrimary" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_stock_min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/et_stock_min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Input Stock Min / Day"
                android:inputType="number"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorPrimary" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_stock_max"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/et_stock_max"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Input Stock Max / Day"
                android:inputType="number"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorPrimary" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_production_min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/et_production_min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Input Production Min / Day"
                android:inputType="number"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorPrimary" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_production_max"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/et_production_max"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Input Production Max / Day"
                android:inputType="number"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorPrimary" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorGray"
            android:drawableEnd="@drawable/ic_arrow_forward"
            android:enabled="false"
            android:paddingEnd="32dp"
            android:paddingStart="32dp"
            android:text="Next"
            android:textAlignment="textStart"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#FFFFFF" />

    </LinearLayout>


</ScrollView>
